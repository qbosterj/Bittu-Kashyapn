<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolbar"
        style="@style/Toolbar.Main">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            style="@style/TextView.Title" />

    </android.support.v7.widget.Toolbar>

    <View style="@style/View.Line" />

    <android.support.v7.widget.LinearLayoutCompat style="@style/Layout.Main">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/mobileLinearLayout"
            style="@style/Layout.Wrap">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mobileTextView"
                style="@style/TextView.Normal"
                android:padding="16dip"
                android:textSize="14sp" />

            <android.support.v7.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:paddingLeft="16dip"
                android:paddingRight="16dip">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="短信验证"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/codeEditText"
                    style="@style/EditText.Username"
                    android:layout_weight="1"
                    android:hint="请输入短信验证码"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/getTextView"
                    style="@style/TextView.Title"
                    android:text="获取验证码"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/submitTextView"
                style="@style/TextView.Button"
                android:text="提 交"
                tools:ignore="HardcodedText" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/payPassTextView"
                style="@style/TextView.Normal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="通过支付密码来验证"
                tools:ignore="HardcodedText" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/payPassLinearLayout"
            style="@style/Layout.Wrap"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatTextView
                style="@style/TextView.Normal"
                android:padding="16dip"
                android:text="您已设置支付密码"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <android.support.v7.widget.LinearLayoutCompat
                style="@style/Layout.Tool"
                android:paddingLeft="16dip"
                android:paddingRight="16dip">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Title"
                    android:text="支付密码"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/payPassEditText"
                    style="@style/EditText.Username"
                    android:layout_weight="1"
                    android:hint="请输入支付密码"
                    tools:ignore="HardcodedText" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/confirmTextView"
                style="@style/TextView.Button"
                android:text="确 认"
                tools:ignore="HardcodedText" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
