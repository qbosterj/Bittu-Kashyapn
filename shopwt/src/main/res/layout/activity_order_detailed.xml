<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolbar"
        style="@style/Toolbar.Main">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            style="@style/TextView.Title" />

    </android.support.v7.widget.Toolbar>

    <View style="@style/View.Line" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        style="@style/Layout.Main"
        android:layout_weight="1">

        <android.support.v7.widget.LinearLayoutCompat style="@style/Layout.Main">

            <RelativeLayout style="@style/Layout.Tool">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.ToolTitle"
                    android:drawableLeft="@mipmap/ic_mine_order"
                    android:drawableStart="@mipmap/ic_mine_order"
                    android:text="交易状态"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/stateTextView"
                    style="@style/TextView.ToolValue"
                    android:text="待收货"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addressRelativeLayout"
                style="@style/Layout.Tool"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:paddingBottom="12dip"
                android:paddingTop="12dip">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/addressNameTextView"
                    style="@style/TextView.Max"
                    android:drawableLeft="@mipmap/ic_mine_address"
                    android:drawableStart="@mipmap/ic_mine_address"
                    android:textColor="@color/blackSub"
                    android:textSize="14sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/addressMobileTextView"
                    style="@style/TextView.Normal"
                    android:layout_alignBottom="@+id/addressNameTextView"
                    android:layout_alignTop="@+id/addressNameTextView"
                    android:layout_toEndOf="@+id/addressNameTextView"
                    android:layout_toRightOf="@+id/addressNameTextView"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/addressAreaTextView"
                    style="@style/TextView.Normal"
                    android:layout_below="@+id/addressNameTextView"
                    android:layout_marginTop="4dip"
                    android:paddingLeft="30dip"
                    android:paddingRight="30dip" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/invoiceRelativeLayout"
                style="@style/Layout.Tool"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:paddingBottom="12dip"
                android:paddingTop="12dip">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/invoiceNameTextView"
                    style="@style/TextView.Max"
                    android:drawableLeft="@mipmap/ic_mine_property"
                    android:drawableStart="@mipmap/ic_mine_property"
                    android:text="发票信息"
                    android:textColor="@color/blackSub"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/invoiceContentTextView"
                    style="@style/TextView.Normal"
                    android:layout_below="@+id/invoiceNameTextView"
                    android:layout_marginTop="4dip"
                    android:paddingLeft="30dip"
                    android:paddingRight="30dip" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/messageRelativeLayout"
                style="@style/Layout.Tool"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:paddingBottom="12dip"
                android:paddingTop="12dip">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/messageNameTextView"
                    style="@style/TextView.Max"
                    android:drawableLeft="@mipmap/ic_mine_setting"
                    android:drawableStart="@mipmap/ic_mine_setting"
                    android:text="订单留言"
                    android:textColor="@color/blackSub"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/messageContentTextView"
                    style="@style/TextView.Normal"
                    android:layout_below="@+id/messageNameTextView"
                    android:layout_marginTop="4dip"
                    android:paddingLeft="30dip"
                    android:paddingRight="30dip" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/Layout.Tool"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:paddingBottom="12dip"
                android:paddingTop="12dip">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/paymentNameTextView"
                    style="@style/TextView.Max"
                    android:drawableLeft="@mipmap/ic_mine_invite"
                    android:drawableStart="@mipmap/ic_mine_invite"
                    android:text="付款方式"
                    android:textColor="@color/blackSub"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/paymentContentTextView"
                    style="@style/TextView.Normal"
                    android:layout_below="@+id/paymentNameTextView"
                    android:layout_marginTop="4dip"
                    android:paddingLeft="30dip"
                    android:paddingRight="30dip" />

            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/storeNameTextView"
                style="@style/TextView.ToolValueDot"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="16dip"
                android:background="@drawable/selector_color_white"
                android:drawableLeft="@mipmap/ic_store_goods"
                android:drawablePadding="4dip"
                android:drawableStart="@mipmap/ic_store_goods"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:textColor="@color/blackSub" />

            <View style="@style/View.Line" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mainRecyclerView"
                style="@style/Layout.Main" />

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/zengPinLinearLayout"
                style="@style/Layout.Horizontal"
                android:layout_height="40dip"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:paddingBottom="8dip"
                android:paddingLeft="16dip"
                android:paddingRight="16dip"
                android:paddingTop="8dip">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.GoodsActivity"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/specChooseTextView"
                    android:layout_alignTop="@+id/specChooseTextView"
                    android:layout_toEndOf="@+id/specChooseTextView"
                    android:layout_toRightOf="@+id/specChooseTextView"
                    android:text="赠品"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/zengPinDescTextView"
                    style="@style/TextView.Small"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="4dip"
                    android:paddingRight="4dip"
                    android:singleLine="true" />

            </android.support.v7.widget.LinearLayoutCompat>

            <RelativeLayout
                android:id="@+id/promotionRelativeLayout"
                style="@style/Layout.Tool"
                android:layout_height="40dip"
                android:layout_marginTop="1px"
                android:paddingLeft="16dip"
                android:paddingRight="16dip">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.ToolTitle"
                    android:layout_height="40dip"
                    android:text="优惠"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/promotionContentTextView"
                    style="@style/TextView.ToolValue"
                    android:layout_height="40dip"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/Layout.Tool"
                android:layout_height="40dip"
                android:layout_marginTop="1px"
                android:paddingLeft="16dip"
                android:paddingRight="16dip">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.ToolTitle"
                    android:layout_height="40dip"
                    android:text="运费"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/logisticsMoneyTextView"
                    style="@style/TextView.ToolValue"
                    android:layout_height="40dip"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/Layout.Tool"
                android:layout_height="40dip"
                android:layout_marginTop="1px"
                android:paddingLeft="16dip"
                android:paddingRight="16dip">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.ToolTitle"
                    android:layout_height="40dip"
                    android:text="实付（含运费）"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/totalMoneyTextView"
                    style="@style/TextView.ToolValue"
                    android:layout_height="40dip"
                    android:textColor="@color/primary"
                    android:textSize="12sp" />

            </RelativeLayout>

            <android.support.v7.widget.LinearLayoutCompat
                style="@style/Layout.Item"
                android:layout_marginBottom="16dip"
                android:layout_marginTop="16dip"
                android:paddingBottom="12dip"
                android:paddingTop="12dip">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/snTextView"
                    style="@style/TextView.Small" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/createTimeTextView"
                    style="@style/TextView.Small"
                    android:layout_marginTop="4dip" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/payTimeTextView"
                    style="@style/TextView.Small"
                    android:layout_marginTop="4dip" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.LinearLayoutCompat
        style="@style/Layout.Horizontal"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true">

        <top.yokey.shopwt.view.CenterTextView
            android:id="@+id/customerTextView"
            style="@style/TextView.Normal"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:background="@drawable/selector_color_white"
            android:drawableLeft="@mipmap/ic_goods_message"
            android:drawablePadding="4dip"
            android:drawableStart="@mipmap/ic_goods_message"
            android:text="客服"
            tools:ignore="HardcodedText" />

        <View style="@style/View.Horizontal" />

        <top.yokey.shopwt.view.CenterTextView
            android:id="@+id/callTextView"
            style="@style/TextView.Normal"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:background="@drawable/selector_color_white"
            android:drawableLeft="@mipmap/ic_goods_cart"
            android:drawablePadding="4dip"
            android:drawableStart="@mipmap/ic_goods_cart"
            android:text="电话"
            tools:ignore="HardcodedText" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/operaTextView"
            style="@style/TextView.Normal"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:background="@drawable/selector_color_primary"
            android:gravity="center"
            android:text="Opera"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
