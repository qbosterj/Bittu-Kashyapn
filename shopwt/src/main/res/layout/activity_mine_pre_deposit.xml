<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Main">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolbar"
        style="@style/Toolbar.Main">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            style="@style/TextView.Title" />

    </android.support.v7.widget.Toolbar>

    <View style="@style/View.Line" />

    <RelativeLayout
        android:id="@+id/headerRelativeLayout"
        style="@style/Layout.Wrap"
        android:background="@mipmap/bg_mine"
        android:padding="16dip">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/preDepositTextView"
            style="@style/TextView.Normal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="预存款余额"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/preDepositValueTextView"
            style="@style/TextView.Normal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/preDepositTextView"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <View style="@style/View.Line" />

    <android.support.design.widget.TabLayout
        android:id="@+id/mainTabLayout"
        style="@style/Layout.Tab" />

    <View style="@style/View.Line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        style="@style/Layout.Main" />

</android.support.v7.widget.LinearLayoutCompat>
