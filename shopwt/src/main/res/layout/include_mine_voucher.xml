<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    style="@style/Layout.Main"
    android:background="@color/background"
    tools:ignore="Overdraw">

    <RelativeLayout
        style="@style/Layout.Wrap"
        android:background="@mipmap/bg_mine"
        android:padding="16dip">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tipsTextView"
            style="@style/TextView.Small"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="请输入已获得的代金券卡号领取"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView.Small"
            android:layout_below="@+id/tipsTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dip"
            android:text="领取代金券后可以再购买商品下单时使用"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/Layout.Tool"
        android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView.Title"
            android:text="卡密号"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/codeEditText"
            style="@style/EditText.Username"
            android:layout_weight="1"
            android:hint="请输入代金券卡密号"
            tools:ignore="HardcodedText" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View style="@style/View.Line" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/Layout.Tool"
        android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView.Title"
            android:text="验证码"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/captchaEditText"
            style="@style/EditText.Username"
            android:layout_weight="1"
            android:hint="请输入验证码"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/captchaImageView"
            android:layout_width="88dip"
            android:layout_height="40dip"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/submitTextView"
        style="@style/TextView.Button"
        android:text="确认提交"
        tools:ignore="HardcodedText" />

</androidx.appcompat.widget.LinearLayoutCompat>
