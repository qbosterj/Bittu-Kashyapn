<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    style="@style/Layout.Goods">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mainImageView"
        style="@style/ImageView.Goods" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        style="@style/TextView.Name"
        android:layout_below="@+id/mainImageView"
        android:paddingBottom="4dip"
        android:paddingTop="4dip"
        android:textSize="12sp" />

    <View
        android:id="@+id/lineView"
        style="@style/View.Line"
        android:layout_below="@+id/nameTextView" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/moneyTextView"
        style="@style/TextView.Money"
        android:layout_below="@+id/lineView"
        android:layout_marginEnd="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="4dip"
        android:textSize="14sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mobileTextView"
        style="@style/TextView.ItemMobileHave"
        android:layout_alignBottom="@id/moneyTextView"
        android:layout_alignTop="@+id/moneyTextView"
        android:layout_toEndOf="@+id/moneyTextView"
        android:layout_toRightOf="@+id/moneyTextView" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/cartImageView"
        style="@style/ImageView.Item"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lineView"
        android:layout_marginTop="4dip"
        android:src="@mipmap/ic_item_cart" />

    <View
        android:id="@+id/line1View"
        style="@style/View.Line"
        android:layout_below="@+id/moneyTextView"
        android:layout_marginTop="4dip" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/saleTextView"
        style="@style/TextView.Small"
        android:layout_alignBottom="@+id/moreImageView"
        android:layout_alignTop="@+id/moreImageView" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ownShopTextView"
        style="@style/TextView.Small"
        android:layout_alignBottom="@+id/moreImageView"
        android:layout_alignTop="@+id/moreImageView"
        android:layout_marginEnd="4dip"
        android:layout_marginRight="4dip"
        android:layout_toLeftOf="@+id/moreImageView"
        android:layout_toStartOf="@+id/moreImageView"
        android:text="自营"
        android:textColor="@color/primary"
        tools:ignore="HardcodedText" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/moreImageView"
        style="@style/ImageView.Item"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line1View"
        android:layout_marginTop="4dip"
        android:src="@drawable/ic_more_horiz" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/favoritesTextView"
        style="@style/TextView.ItemFavorites"
        android:layout_alignBottom="@+id/line1View"
        android:layout_alignTop="@+id/mainImageView" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/descTextView"
        style="@style/TextView.Small"
        android:visibility="gone" />

</RelativeLayout>
