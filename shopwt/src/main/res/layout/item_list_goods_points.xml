<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRelativeLayout"
    style="@style/Layout.Goods">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mainImageView"
        style="@style/ImageView.Goods" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        style="@style/TextView.Name"
        android:layout_below="@+id/mainImageView"
        android:paddingBottom="4dip"
        android:paddingTop="4dip"
        android:textSize="12sp" />

    <View
        android:id="@+id/lineView"
        style="@style/View.Line"
        android:layout_below="@+id/nameTextView" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/moneyTextView"
        style="@style/TextView.Money"
        android:layout_below="@+id/lineView"
        android:layout_marginEnd="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="4dip"
        android:textSize="14sp" />

    <View
        android:id="@+id/line1View"
        style="@style/View.Line"
        android:layout_below="@+id/moneyTextView"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/stockTextView"
        style="@style/TextView.Small"
        android:layout_below="@+id/line1View" />

</RelativeLayout>
